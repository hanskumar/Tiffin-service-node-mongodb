    <div  id="add-address-modal">
         <div class="" role="document" style="width: 470px! important;">
         <form name="update_address" id="update_address" method="POST" action="/update_address">
            <div class="modal-content">
               
               <div class="modal-body">
                  
                     <div class="form-row">
                        <div class="form-group col-md-12">
                           <label for="inputPassword4">Delivery Address</label>
                           <div class="input-group">
                              <input type="text" class="form-control delivery_address" placeholder="Delivery Area" name="address" value="<%=address.address%>" >
                              <div class="input-group-append">
                                 <a class="btn btn-outline-secondary get_location" id="button-addon2" style="padding-bottom: 0px;cursor: pointer;"><i class="icofont-location-pin"></i></a>
                              </div>
                           </div>
                        </div>
                        <div class="form-group col-md-12">
                           <label for="inputPassword4">Door/Flate No
                           </label>
                           <input type="text" class="form-control" name="flat_no" placeholder="Flat/Door Number" value="<%=address.flat_door_no%>">
                        </div>
                        <div class="form-group col-md-12">
                           <label for="inputPassword4">landmark
                           </label>
                           <input type="text" class="form-control" name="landmark" placeholder="Landmark" value="<%=address.landmark%>">
                        </div>
                        <div class="form-group mb-0 col-md-12">
                           <label for="inputPassword4">Address Type
                           </label>
                           <div class="btn-group btn-group-toggle d-flex justify-content-center" data-toggle="buttons">
                              <label class="btn btn-info active" style="cursor: pointer;">
                              <input type="radio" name="address_type" id="option1"  checked value="home"> Home
                              </label>
                              <label class="btn btn-info" style="cursor: pointer;" >
                              <input type="radio" name="address_type" id="option2" value="work"> Work
                              </label>
                              <label class="btn btn-info" style="cursor: pointer;">
                              <input type="radio" name="address_type" id="option3" value="other"> Other
                              </label>
                           </div>
                        </div>
                     </div>
                  
               </div>
               <div class="modal-footer">
                  <input type="hidden" class="form-control" name="addss_id" value="<%=address._id%>">
                  <input type="submit" class="btn d-flex w-50 text-center justify-content-center btn-primary" style="margin-left: auto;
                    margin-right: auto;" value="Save Address">
               </div>
            </div>
         </form>   
         </div>
      </div>